<cluster xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="types types.xsd cluster cluster.xsd" id="0x0064" name="Temperature Alarm Cluster" revision="1">
  <revisionHistory>
    <revision revision="1" summary="Initial revision"/>
  </revisionHistory>
  <clusterIds>
    <clusterId id="0x0064" name="Temperature Alarm">
      <provisionalConform/>
    </clusterId>
  </clusterIds>
  <classification hierarchy="derived" baseCluster="Alarm Base" role="application" picsCode="TEMPALM" scope="Endpoint"/>
  <features>
    <feature bit="20" code="OVER" name="OverTemperature" summary="Supports activating alarms when a temperature measurement goes over a threshold">
      <optionalConform choice="a" more="true" min="1"/>
    </feature>
    <feature bit="21" code="UNDER" name="UnderTemperature" summary="Supports activating alarms when a temperature measurement goes under a threshold">
      <optionalConform choice="a" more="true" min="1"/>
    </feature>
    <feature bit="22" code="MAJOR" name="MajorThreshold" summary="Supports the major threshold for alarms">
      <optionalConform/>
    </feature>
    <feature bit="23" code="MINOR" name="MinorThreshold" summary="Supports the minor threshold for alarms">
      <optionalConform>
        <feature name="MAJOR"/>
      </optionalConform>
    </feature>
    <feature bit="24" code="OCRIADJ" name="OverCriticalAdjustable" summary="Supports the ability to adjust the over critical temperature threshold">
      <optionalConform>
        <feature name="OVER"/>
      </optionalConform>
    </feature>
    <feature bit="25" code="OMAJADJ" name="OverMajorAdjustable" summary="Supports the ability to adjust the over major temperature threshold">
      <optionalConform>
        <andTerm>
          <feature name="OVER"/>
          <feature name="MAJOR"/>
        </andTerm>
      </optionalConform>
    </feature>
    <feature bit="26" code="OMINADJ" name="OverMinorAdjustable" summary="Supports the ability to adjust the over minor temperature threshold">
      <optionalConform>
        <andTerm>
          <feature name="OVER"/>
          <feature name="MINOR"/>
        </andTerm>
      </optionalConform>
    </feature>
    <feature bit="27" code="UMINADJ" name="UnderMinorAdjustable" summary="Supports the ability to adjust the under minor temperature threshold">
      <optionalConform>
        <andTerm>
          <feature name="UNDER"/>
          <feature name="MINOR"/>
        </andTerm>
      </optionalConform>
    </feature>
    <feature bit="28" code="UMAJADJ" name="UnderMajorAdjustable" summary="Supports the ability to adjust the under major temperature threshold">
      <optionalConform>
        <andTerm>
          <feature name="UNDER"/>
          <feature name="MAJOR"/>
        </andTerm>
      </optionalConform>
    </feature>
    <feature bit="29" code="UCRIADJ" name="UnderCriticalAdjustable" summary="Supports the ability to adjust the under critical temperature threshold">
      <optionalConform>
        <feature name="UNDER"/>
      </optionalConform>
    </feature>
  </features>
  <dataTypes>
    <bitmap name="AlarmBitmap">
      <bitfield name="CriticalOverTemperatureAlarm" bit="0" summary="The measured temperature is above the critical threshold.">
        <mandatoryConform/>
      </bitfield>
      <bitfield name="MajorOverTemperatureAlarm" bit="1" summary="The measured temperature is above the major threshold.">
        <mandatoryConform/>
      </bitfield>
      <bitfield name="MinorOverTemperatureAlarm" bit="2" summary="The measured temperature is above the minor threshold.">
        <mandatoryConform/>
      </bitfield>
      <bitfield name="MinorUnderTemperatureAlarm" bit="3" summary="The measured temperature is below the minor threshold.">
        <mandatoryConform/>
      </bitfield>
      <bitfield name="MajorUnderTemperatureAlarm" bit="4" summary="The measured temperature is below the major threshold.">
        <mandatoryConform/>
      </bitfield>
      <bitfield name="CriticalUnderTemperatureAlarm" bit="5" summary="The measured temperature is below the critical threshold.">
        <mandatoryConform/>
      </bitfield>
    </bitmap>
  </dataTypes>
  <attributes>
    <attribute id="0x0080" name="CriticalOverTemperatureThreshold" type="temperature">
      <access read="true" readPrivilege="view"/>
      <mandatoryConform>
        <feature name="OVER"/>
      </mandatoryConform>
      <constraint>
        <min>
          <compute>
            <operation>add</operation>
            <left>
              <maxOf>
                <attribute name="CriticalUnderTemperatureThreshold"/>
                <attribute name="MajorOverTemperatureThreshold"/>
                <attribute name="MinorOverTemperatureThreshold"/>
              </maxOf>
            </left>
            <right value="1"/>
          </compute>
        </min>
      </constraint>
    </attribute>
    <attribute id="0x0081" name="MajorOverTemperatureThreshold" type="temperature">
      <access read="true" readPrivilege="view"/>
      <mandatoryConform>
        <andTerm>
          <feature name="OVER"/>
          <feature name="MAJOR"/>
        </andTerm>
      </mandatoryConform>
      <constraint>
        <min>
          <compute>
            <operation>add</operation>
            <left>
              <maxOf>
                <attribute name="MajorUnderTemperatureThreshold"/>
                <attribute name="MinorOverTemperatureThreshold"/>
              </maxOf>
            </left>
            <right value="1"/>
          </compute>
        </min>
      </constraint>
    </attribute>
    <attribute id="0x0082" name="MinorOverTemperatureThreshold" type="temperature">
      <access read="true" readPrivilege="view"/>
      <mandatoryConform>
        <andTerm>
          <feature name="OVER"/>
          <feature name="MINOR"/>
        </andTerm>
      </mandatoryConform>
      <constraint>
        <min>
          <compute>
            <operation>add</operation>
            <left>
              <attribute name="MinorUnderTemperatureThreshold"/>
            </left>
            <right value="1"/>
          </compute>
        </min>
      </constraint>
    </attribute>
    <attribute id="0x0083" name="MinorUnderTemperatureThreshold" type="temperature">
      <access read="true" readPrivilege="view"/>
      <mandatoryConform>
        <andTerm>
          <feature name="UNDER"/>
          <feature name="MINOR"/>
        </andTerm>
      </mandatoryConform>
      <constraint>
        <max>
          <compute>
            <operation>subtract</operation>
            <left>
              <attribute name="MinorOverTemperatureThreshold"/>
            </left>
            <right value="1"/>
          </compute>
        </max>
      </constraint>
    </attribute>
    <attribute id="0x0084" name="MajorUnderTemperatureThreshold" type="temperature">
      <access read="true" readPrivilege="view"/>
      <mandatoryConform>
        <andTerm>
          <feature name="UNDER"/>
          <feature name="MAJOR"/>
        </andTerm>
      </mandatoryConform>
      <constraint>
        <max>
          <compute>
            <operation>subtract</operation>
            <left>
              <minOf>
                <attribute name="MajorOverTemperatureThreshold"/>
                <attribute name="MinorUnderTemperatureThreshold"/>
              </minOf>
            </left>
            <right value="1"/>
          </compute>
        </max>
      </constraint>
    </attribute>
    <attribute id="0x0085" name="CriticalUnderTemperatureThreshold" type="temperature">
      <access read="true" readPrivilege="view"/>
      <mandatoryConform>
        <feature name="UNDER"/>
      </mandatoryConform>
      <constraint>
        <max>
          <compute>
            <operation>subtract</operation>
            <left>
              <minOf>
                <attribute name="CriticalOverTemperatureThreshold"/>
                <attribute name="MajorUnderTemperatureThreshold"/>
                <attribute name="MinorUnderTemperatureThreshold"/>
              </minOf>
            </left>
            <right value="1"/>
          </compute>
        </max>
      </constraint>
    </attribute>
  </attributes>
  <commands>
    <command id="0x80" name="SetTemperatureAlarmThresholds" direction="commandToServer" response="Y">
      <access invokePrivilege="operate"/>
      <mandatoryConform>
        <orTerm>
          <feature name="OCRIADJ"/>
          <feature name="OMAJADJ"/>
          <feature name="OMINADJ"/>
          <feature name="UMINADJ"/>
          <feature name="UMAJADJ"/>
          <feature name="UCRIADJ"/>
        </orTerm>
      </mandatoryConform>
      <field id="0" name="CriticalOverTemperatureThreshold" type="temperature">
        <optionalConform choice="b" more="true" min="1">
          <feature name="OCRIADJ"/>
        </optionalConform>
        <constraint>
          <min>
            <compute>
              <operation>add</operation>
              <left>
                <maxOf>
                  <field name="CriticalUnderTemperatureThreshold"/>
                  <field name="MajorOverTemperatureThreshold"/>
                  <field name="MinorOverTemperatureThreshold"/>
                </maxOf>
              </left>
              <right value="1"/>
            </compute>
          </min>
        </constraint>
      </field>
      <field id="1" name="MajorOverTemperatureThreshold" type="temperature">
        <optionalConform choice="b" more="true" min="1">
          <feature name="OMAJADJ"/>
        </optionalConform>
        <constraint>
          <min>
            <compute>
              <operation>add</operation>
              <left>
                <maxOf>
                  <field name="MajorUnderTemperatureThreshold"/>
                  <field name="MinorOverTemperatureThreshold"/>
                </maxOf>
              </left>
              <right value="1"/>
            </compute>
          </min>
        </constraint>
      </field>
      <field id="2" name="MinorOverTemperatureThreshold" type="temperature" default="32765">
        <optionalConform choice="b" more="true" min="1">
          <feature name="OMINADJ"/>
        </optionalConform>
        <constraint>
          <min>
            <compute>
              <operation>add</operation>
              <left>
                <field name="MinorUnderTemperatureThreshold"/>
              </left>
              <right value="1"/>
            </compute>
          </min>
        </constraint>
      </field>
      <field id="3" name="MinorUnderTemperatureThreshold" type="temperature" default="-27314">
        <optionalConform choice="b" more="true" min="1">
          <feature name="UMINADJ"/>
        </optionalConform>
        <constraint>
          <max>
            <compute>
              <operation>subtract</operation>
              <left>
                <field name="MinorOverTemperatureThreshold"/>
              </left>
              <right value="1"/>
            </compute>
          </max>
        </constraint>
      </field>
      <field id="4" name="MajorUnderTemperatureThreshold" type="temperature">
        <optionalConform choice="b" more="true" min="1">
          <feature name="UMAJADJ"/>
        </optionalConform>
        <constraint>
          <max>
            <compute>
              <operation>subtract</operation>
              <left>
                <minOf>
                  <field name="MajorOverTemperatureThreshold"/>
                  <field name="MinorUnderTemperatureThreshold"/>
                </minOf>
              </left>
              <right value="1"/>
            </compute>
          </max>
        </constraint>
      </field>
      <field id="5" name="CriticalUnderTemperatureThreshold" type="temperature">
        <optionalConform choice="b" more="true" min="1">
          <feature name="UCRIADJ"/>
        </optionalConform>
        <constraint>
          <max>
            <compute>
              <operation>subtract</operation>
              <left>
                <minOf>
                  <field name="CriticalOverTemperatureThreshold"/>
                  <field name="MajorUnderTemperatureThreshold"/>
                  <field name="MinorUnderTemperatureThreshold"/>
                </minOf>
              </left>
              <right value="1"/>
            </compute>
          </max>
        </constraint>
      </field>
    </command>
  </commands>
</cluster>
